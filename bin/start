#!/bin/bash
set -euo pipefail

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
source "$BUILDPACK_DIR/scripts/install_go.sh"
output_dir=$(mktemp -d -t startXXX)

pushd $BUILDPACK_DIR
echo "-----> Running go build start"
GOROOT=$GoInstallDir $GoInstallDir/bin/go build -mod=vendor -o $output_dir/start ./src/php/start/cli
popd

exec $output_dir/start
